{
  "name": "sms-marketing-platform",
  "version": "1.0.0",
  "description": "SMS Marketing Platform for Companies",
  "private": true,
  "dependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "lucide-react": "^0.263.1",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-date-object": "^2.1.9",
    "react-dom": "^18.2.0",
    "react-multi-date-picker": "^4.5.2",
    "react-phone-number-input": "^3.3.0",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.0"
  },
  "scripts": {
    "start": "PORT=8081 WDS_SOCKET_URL=wss://yamata-no-orochi.com:8443/ws react-scripts start",
    "start:direct": "PORT=8081 react-scripts start",
    "build": "react-scripts build",
    "build:production": "REACT_APP_NODE_ENV=production GENERATE_SOURCEMAP=false INLINE_RUNTIME_CHUNK=false FAST_REFRESH=false WDS_SOCKET_HOST= WDS_SOCKET_PORT= WDS_SOCKET_PATH= react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "check": "npm run lint && npm run format:check && npm run type-check",
    "fix": "npm run lint:fix && npm run format",
    "deploy:yamata": "./scripts/deploy.sh yamata",
    "deploy:production": "./scripts/deploy.sh production"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amirphl/Kiyohime.git"
  },
  "keywords": [
    "sms",
    "marketing",
    "campaigns",
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "SMS Marketing Team",
  "license": "MIT",
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2"
  }
}
